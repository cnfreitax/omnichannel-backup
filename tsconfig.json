{
  "compilerOptions": {
     "target": "es6",
      "module": "commonjs",
      "outDir": "./dist",
      "rootDirs": [
      "jest.config.js",
      "./src"
    ],
      "strict": true,
      "strictPropertyInitialization": false,
      "baseUrl": "./src",
      "allowJs": true,
      "paths": {
        "@modules/*": ["modules/*"],
        "@config/*": ["config/*"],
        "@shared/*": ["shared/*"]
      },
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "forceConsistentCasingInFileNames": true
   }
}
